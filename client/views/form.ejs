<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('static/head') %>
        <link rel="stylesheet" href="/css/layouts/form.css" />
    </head>
    <body>
        <%- include('static/header') %>
        <main>
            <div class="form">
                <header>
                    <h1>Joining Bagun</h1>
                </header>
                <form action="join" method="POST">
                    <label for="fname">First name *</label>
                    <input type="text" x-autocompletetype="name" required />

                    <label for="lname">Last Name *</label>
                    <input type="text" x-autocompletetype="surname" required />

                    <label for="email">Email *</label>
                    <input
                        type="email"
                        autocomplete="email"
                        spellcheck="false"
                        required
                    />

                    <label for="">Twitter</label>
                    <input type="text" />

                    <label for="">Youtube *</label>
                    <input type="text" required />

                    <label for="">Age *</label>
                    <input type="number" required />

                    <input type="submit" />
                </form>
            </div>
        </main>
        <%- include('static/footer') %>
    </body>
</html>
